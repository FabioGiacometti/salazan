{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": true,
    "module": "commonjs",
    "target": "es5",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "typeRoots": ["node_modules/@types"],
    "lib": ["dom", "es2017"],
    "incremental": true,
    "declaration": true,
    "removeComments": true,
    "preserveConstEnums": true
  },
  "exclude": ["dist", "build", "node_modules"]
}
